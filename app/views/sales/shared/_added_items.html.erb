 <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="line_items_table">
    <thead>
      <tr>
        <th nowrap>SR#</th>
        <th nowrap>Item Name</th>
        <th nowrap>Item Brand</th>
        <th nowrap>Item Price</th>
        <th nowrap>Item Quantity</th>
        <th nowrap>Total Price</th>
        <th nowrap>#</th>
      </tr>
    </thead>

    <tbody>
      <%@line_items.each do |line_item|%>
        <tr id='item-<%=line_item.item_id%>' class=''>
          <td>
            <input type='hidden' name='item[]' id='item' value='<%=line_item.item_id%>' class='form-control'>
            <input type='hidden' name='sale' id='saleid' value='<%=sale.id%>' class='form-control'>
            <input type='hidden' name='line_item' id='lineitemid' value='<%=line_item.id%>' class='form-control'>
            <%=line_item.item_id%>
          </td>
          <td><%=line_item.item.name%></td>
          <td><%=line_item.item.brand %></td>
          <td class='width-130'>
            <input type='text' name='item_price[]' id='item_price_js' value='<%=line_item.price%>' data-item-id='<%=line_item.item.id%>' class='form-control item_price_<%=line_item.item_id%>'>
          </td>
          <td class='width-130'>
            <input type='number' name='quantity[]' id='item_quantity' value='<%=line_item.quantity%>' class='form-control  item_quantity_<%=line_item.item.id%>' data-item-id='<%=line_item.item.id%>'>
          </td>
          <td id='item-<%=line_item.item.id%>-total-price'>
            <%=line_item.price*line_item.quantity%>
          </td>
          <td>
            <a href='#' onclick='return remove_lineitem(<%=line_item.id%>)'>X</a>
          </td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>