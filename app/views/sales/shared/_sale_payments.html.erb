<h4 class="text-primary"><span class="glyphicon glyphicon-credit-card"></span> Payments</h4>
  <hr class="hidden-print" />

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th nowrap="">Paid Amt</th>
        <th nowrap="">Created At</th>
      </tr>
    </thead>

    <tbody>
      <% if payments.blank? %>
        <tr>
          <td colspan="3">There are no payments on this balance yet.</td>
        </tr>
      <% else %>
        <%payments.each do |payment|%>
          <tr>
            <td nowrap><%= payment.amount.to_i%></td>
            <td nowrap><%= date_format(payment.created_at)%></td>
          </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>


  <h4 class="text-primary hidden-print"><span class="glyphicon glyphicon-shopping-cart"></span> Balance</h4>

  <div class="alert alert-danger hidden-print balance">
    <%= number_to_currency(@sale.remaining_amount.to_i, unit: config.currency) %>
  </div>


  <hr class="hidden-print" />
