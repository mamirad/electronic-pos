<%= form_for expense, html:{'data-parsley-validate':'true'} do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= form.label :price %>
        <%= form.number_field :price,class:'form-control',required:true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= form.label :expense_type %>
        <%= form.select :expense_type,options_for_select(Expense.expense_types.keys,expense.expense_type),{prompt:'select Expense Type'},class:'form-control',required:true %>
      </div>
    </div>
  </div>
  

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= form.label :remarks %>
        <%= form.text_field :remarks,class:'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
